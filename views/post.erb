<div class="post">
  <h2 class="title">
    <span class="date">
      <%= post[:created_at].strftime("%b") %>
      <b><%= post[:created_at].strftime("%d") %></b>
    </span>
    <b><a href="<%= post.url %>"><%= post[:title] %></a></b>
    <% if admin? %>
      <a class="more" href="<%= url(post.url) %>edit">edit</a>
    <% end %>
   </h2>
  <p>tags: <span class="tags">
    <%= post.linked_tags %>
    <% if Blog.disqus_shortname %>
    | <a href="<%= url(post.url) %>#disqus_thread">comments</a>
    <% end %>
  </span>
  </p>
  <div class="entry">
    <%= post.body_html %>
  </div>
</div>

<% if Blog.disqus_shortname %>
  <div id="disqus_thread"></div>
  <script type="text/javascript" src="http://disqus.com/forums/<%= Blog.disqus_shortname %>/embed.js"></script>
  <noscript><a href="http://<%= Blog.disqus_shortname %>.disqus.com/?url=ref">
    View the discussion thread.</a>
  </noscript>
  <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
<% end %>
